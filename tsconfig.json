{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"target": "ES6",
		"module": "CommonJS",
		"sourceMap": true,
		"outDir": "dist",
		"noImplicitAny": true,
		"allowJs": true,
		"esModuleInterop": true,
		"declaration": true
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"esm": true,
		"swc": true
	}
}
